{
    "manifest_version": 3,
    "name": "Coding Clues",
    "version": "1.1",
    "description": "Get simple and optimal coding clues for platforms like LeetCode and CodeChef. Retains content in popup, and can detect problems automatically.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/",
        "https://leetcode.com/*",  
        "https://www.codechef.com/*" 
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
